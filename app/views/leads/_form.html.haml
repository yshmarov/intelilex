= form_for @lead do |f|
  - if @lead.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lead.errors.count, "error")} prohibited this lead from being saved:"
      %ul
        - @lead.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :email
    = f.text_field :email
  %p
  .field
    = f.label :comment
    = f.text_field :comment
  .actions
    = f.submit 'Save', class: 'btn btn-success'
